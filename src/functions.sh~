function print-lines(){
    trap 'echo ">> $BASH_COMMAND"' DEBUG
}

function compile-intsort() {
    (
        print-lines
        gcc -g src/intsort.c -o intsort
    )
}

function draw-perf() {
    (
        print-lines
        perf script \
            | ./vendor/FlameGraph/stackcollapse-perf.pl \
            | ./vendor/FlameGraph/flamegraph.pl > $1
    )
}

function record-perf() {
    (
        print-lines
        perf record -F 50 -g -- $@
    )
}


